# IMPORTANT: This is an example file. DO NOT commit real secrets!
# Use sealed-secrets or external-secrets operator in production.
# Copy this file to secrets.yaml and update with your values.

apiVersion: v1
kind: Secret
metadata:
  name: workflow-builder-secrets
  namespace: workflow-builder
type: Opaque
stringData:
  # LLM API Keys (optional, can be configured via UI)
  OPENAI_API_KEY: "your-openai-key-here"
  ANTHROPIC_API_KEY: "your-anthropic-key-here"
  GEMINI_API_KEY: "your-gemini-key-here"
  
  # Database password (if not using managed service)
  POSTGRES_PASSWORD: "your-secure-password-here"
  
  # JWT Secret (for authentication)
  JWT_SECRET: "your-jwt-secret-key-change-in-production"
